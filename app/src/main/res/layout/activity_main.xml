<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtTxtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="Name"
        android:textColor="@color/black"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/btnSayMyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTxtName"
        android:layout_centerInParent="true"
        android:text="Say My Name"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/btnOneHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSayMyName"
        android:layout_centerInParent="true"
        android:text="Hello Button" />


    <Button
        android:id="@+id/btnTwoHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOneHello"
        android:layout_centerInParent="true"
        android:text="Hello Again" />


    <Button
        android:id="@+id/btnLongPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTwoHello"
        android:layout_centerInParent="true"
        android:text="Long Press" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLongPress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textSize="20dp" />

</RelativeLayout>